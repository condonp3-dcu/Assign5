<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/custNo2Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingEnd="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:textColor="#0d2bc4"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/customer_no"/>

        <TextView
            android:id="@+id/custNo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="1dp"
            android:paddingStart="61dp"
            android:paddingTop="1dp"
            android:textAlignment="viewStart"
            android:textColor="#0d2bc4"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cust_Id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/currency2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:paddingEnd="1dp"
            android:paddingStart="80dp"
            android:paddingTop="1dp"
            android:textAlignment="viewEnd"
            android:textColor="#bc152e"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/custName2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingEnd="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:textColor="#0fd6f7"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>